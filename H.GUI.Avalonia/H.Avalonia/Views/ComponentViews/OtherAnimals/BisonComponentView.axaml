<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:viewSections="clr-namespace:H.Avalonia"
			 xmlns:componentView="clr-namespace:H.Avalonia.ViewModels.ComponentViews.OtherAnimals;assembly=H.Avalonia"
             x:Class="H.Avalonia.BisonComponentView">
	
	<Design.DataContext>
		<componentView:BisonComponentViewModelDesign/>
	</Design.DataContext>
	
	<DockPanel >
		<StackPanel DockPanel.Dock="Top">
			<!-- Title -->
			<TextBlock  Text="{Binding Path=ViewName}" FontSize="36" FontWeight="Bold" Margin="10,10,0,0" Foreground="#605D5D"/>
			<Border BorderBrush="#D7D7D7" BorderThickness="0,0,0,3" Margin="0,10,0,0"/>
		</StackPanel>
	<ScrollViewer >
	<Grid RowDefinitions="Auto,Auto,Auto">		
			<!-- Step 1 -->
			<viewSections:OtherAnimalsStep1View Grid.Row="0"/>

			<!--Step 2-->
			<viewSections:OtherAnimalsStep2View Grid.Row="1"/>

			<!--Step 3-->
			<viewSections:OtherAnimalsStep3View Grid.Row="2"/>
	</Grid>
	</ScrollViewer>
	</DockPanel>
</UserControl>
