<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="H.Avalonia.Window1"
        Title="Create a New Farm">
    <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Create a new farm" HorizontalAlignment="Center" FontSize="22" FontWeight="Bold" Margin="0,10"/>
        <StackPanel Width="500" Spacing="20" Grid.Row="1" Margin="20">
			<Grid  ColumnDefinitions="*,3*">
				<TextBlock Grid.Column="0" Margin="10,10" FontWeight="Bold" Text="Name"/>
				<TextBox   Grid.Column="1" />
			</Grid>
			<Grid  ColumnDefinitions="*,3*">
				<TextBlock FontWeight="Bold" Grid.Column="0" Margin="10,10" Text="Comments"/>
				<TextBox  Grid.Column="1" />
			</Grid>
        </StackPanel>

        <StackPanel  Grid.Row="2" Spacing="35"  HorizontalAlignment="Center" Margin="0,10">
            <Button Content="Create New Farm" />
			<Button Background="LightGray" HorizontalAlignment="Center" Padding="" Content="Go Back"  />
        </StackPanel>
		<Separator Grid.Row="2" Margin="0,20,0,20" />
    </Grid>

</Window>
