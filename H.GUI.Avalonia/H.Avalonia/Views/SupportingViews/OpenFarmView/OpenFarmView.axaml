<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="H.Avalonia.OpenFarmView"
        Title="OpenFarmView">
		<Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*" HorizontalAlignment="Center" VerticalAlignment="Center">
		

			<!-- Title -->
			<TextBlock FontWeight="Bold" Grid.Row="0" HorizontalAlignment="Center" Margin="0,20" Text="Would you like to open an existing farm or create a new one?" />

			<!-- Buttons -->
			<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
				<Button Content="Create New Farm" />
				<Button Content="Open Existing Farm"  Background="LightGray" />
			</StackPanel>

			<!-- Divider -->
			<Separator Grid.Row="2" Margin="0,20" />

			<!-- Import Section -->
			<StackPanel Grid.Row="3" Orientation="Vertical" HorizontalAlignment="Center">
				<TextBlock FontWeight="Bold" Margin="0,10" Text="Import Existing Data" HorizontalAlignment="Center" />
				<Button Content="Import"  Background="LightGray"/>
			</StackPanel>
		</Grid>


</Window>
